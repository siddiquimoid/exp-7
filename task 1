#include <stdio.h>
int main()
{
    int n, i, a[100], large;
    printf("Enter the number of elements = ");
    scanf("%d", &n);

    for (i = 0; i < n; i++)
    {
        printf("Enter a value = ");
        scanf("%d", &a[i]);
    }
    large = a[0];

    for (i = 1; i < n; i++)
    {
        if (large < a[i])
            large = a[i];
    }
    printf("\nLargest Number is = %d\n", large);

    return 0;
}
